{
  "name": "bot-platform",
  "version": "1.0.0",
  "private": true,
  "description": "Backend modular de bot con PostgreSQL (Sequelize) + OpenAI.",
  "type": "module",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "dev": "nodemon src/server.js",
    "start": "node src/server.js",
    "db:migrate": "sequelize db:migrate --config sequelize.config.cjs",
    "db:seed": "sequelize db:seed:all --config sequelize.config.cjs",
    "db:reset": "sequelize db:migrate:undo:all --config sequelize.config.cjs && sequelize db:migrate --config sequelize.config.cjs && sequelize db:seed:all --config sequelize.config.cjs"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "openai": "^4.52.2",
    "pg": "^8.13.1",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.3",
    "zod": "^3.23.8",
    "dayjs": "^1.11.11"
  },
  "devDependencies": {
    "nodemon": "^3.1.4",
    "sequelize-cli": "^6.6.2"
  }
}